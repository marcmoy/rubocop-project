<!DOCTYPE html>
<html>
<head>
  <title>Goal App</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <h1>GOALING APP</h1>
  <% if flash[:notices] %>
    <div class="notices">
      <% flash[:notices].each do |msg| %>
        <p><b><%= msg %></b></p>
      <% end %>
    </div>
  <% end %>

  <div class="pull-right">
    <% if current_user %>
      <p>Welcome <%= current_user_name %></p>
      <%= button_to "Log Out", session_url, method: :delete %>

      <p>Cheers Remaining:
        <span id="cheer-limit"><%= current_user.cheer_count %></span>
      </p>
    <% else %>
      <p><%= link_to "Sign Up", new_user_url %></p>
      <p>or</p>
      <p><%= link_to "Log In", new_session_url %></p>
    <% end %>
  </div>
</header>

<%= yield %>

</body>
</html>
