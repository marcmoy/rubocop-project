<h1>Sign In</h1>

<%= link_to "Sign up!", new_user_url %>

<form action="<%= session_url %>" method="post">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

    <p>
      <label>Email
        <input type="text" name="user[email]">
      </label>
    </p>

    <p>
      <label>Password
        <input type="password" name="user[password]">
      </label>
    </p>

    <input type="submit">
</form>
